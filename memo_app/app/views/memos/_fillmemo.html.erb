<%= form_with model: memo, class: "form-horizonal" do |form| %>
    <%= render 'application/errors', object: form.object %>
    <div class="form-group">
        <%= form.label :title, "タイトル" %>
        <%= form.text_field :title, class: "form-control" %>
        <p>タイトルを記入してください(50字以内)</p>
    </div>
    <div class="form-group">
        <%= form.label :content, "メモ" %>
        <%= form.text_area :content, class: "form-control", row: 10 %>
        <p>メモとして残したい内容を記入してください(500字以内)</p>
    </div>
    <div class="form-group">
         <%= form.collection_select :genre_id, Genre.all, :id, :name,{ include_blank:'ジャンルを下記から選択 または ジャンルを指定しない' }, { selected: @selected_genre_id } %><br>
         メモを検索する際にジャンルで絞り込むことができます。
    </div>
    <br>
    <%= form.submit "メモを登録する", class: "btn btn-primary"  %>
<% end %>
<%= link_to "メモ一覧画面に戻る", memos_path, style: "color: #FFEDB3; background-color:#000080;" %>